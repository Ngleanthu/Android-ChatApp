<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/left_chat_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_input"
        android:backgroundTint="@color/input_background"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginVertical="@dimen/_2sdp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingHorizontal="@dimen/_6sdp"
            android:textColor="@color/dark"
            android:id="@+id/left_chat_textview"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_input"
        android:backgroundTint="@color/primary"
        android:layout_alignParentEnd="true"
        android:padding="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="40dp"
        android:id="@+id/right_chat_layout"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white_color"
            android:paddingHorizontal="@dimen/_6sdp"
            android:id="@+id/right_chat_textview"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/right_chat_layout"
        android:id="@+id/seen_layout"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/seen"
            android:textColor="@color/secondary_text"
            android:id="@+id/seen_textview"
            android:textSize="14sp"
            android:visibility="gone"
            />
    </LinearLayout>
</RelativeLayout>